---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-2">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-white text-xl font-bold">
        Let's start working together!
      </h1>
    </header>
    <address class="flex flex-col mt-4">
      <h2 class="text-gray-500">Contact Details</h2>
      <p class="text-lg">
        <a
          href="mailto:josuegarza.dev@gmail.com"
          class="text-purple-500 hover:text-purple-700 transition-colors"
        >
          josuegarza.dev@gmail.com
        </a>
      </p>
      <p class="text-gray-400 mt-2">
        <h2 class="text-gray-500">Location</h2>
        <span>Mexico</span>
      </p>
    </address>

    <div class="flex flex-col mt-2 w-fit">
      <ul>
        <li>
          <a
            class="text-purple-500 hover:text-purple-700 transition-colors"
            href={LINKS.resume}
            target="_blank">Resume</a
          >
        </li>
      </ul>
    </div>
    <div class="flex flex-col mt-2 w-fit">
      <ul>

        <li>
          <a
            class="text-purple-500 hover:text-purple-700 transition-colors"
            href={LINKS.cv}
            target="_blank">CV</a
          >
        </li>
      </ul>
    </div>
  </div>
</Card>
