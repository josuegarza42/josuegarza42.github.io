---
import Card from "./Card/index.astro";
import Pulse from "./Pulse.astro";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-1">
  <div class="flex justify-between w-full items-start mb-2">
    <div class="flex flex-col">
      <h2>Currently working</h2>
      <!-- <a href="https://sive.rs/nowff" target="_blank">
        <span class="text-xs text-gray-500 cursor-pointer">I am currently working on</span>
      </a> -->
    </div>
    <Pulse />
  </div>

  <ul class="list-disc list-inside">
    <span class="text-xs text-gray-500 cursor-pointer">
      <a
        href="https://softdone.com.mx/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-purple-500 hover:text-purple-700 transition-colors">Softdone as</a
      >
      </span>
    <li>
      
      PM / Frontend developer
      
    </li>
   
  </ul>
  <ul class="list-disc list-inside">
    <span class="text-xs text-gray-500 cursor-pointer">Freelancer at</span>
    <li>
      <a
        href="https://www.fiverr.com"
        target="_blank"
        rel="noopener noreferrer"
        class="text-purple-500 hover:text-purple-700 transition-colors">Fiverr</a
      >,
      <a
        href="https://www.freelancer.com"
        target="_blank"
        rel="noopener noreferrer"
        class="text-purple-500 hover:text-purple-700 transition-colors">Freelance</a
      >,
      <a
        href="https://www.upwork.com"
        target="_blank"
        rel="noopener noreferrer"
        class="text-purple-500 hover:text-purple-700 transition-colors">Upwork</a
      >
    </li>
  </ul>
</Card>
